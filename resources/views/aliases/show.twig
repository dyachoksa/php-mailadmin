{% extends 'base' %}
{% import 'macros.display' as display %}

{% block page_title %}{{ alias.source }}{% endblock %}

{% block title %}{{ alias.source }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header">
                    <div class="box-tools">
                        <a href="{{ route('aliases.index') }}" class="btn btn-default btn-sm">
                            {{ trans('labels.actions.back') }}
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>{{ trans('models.alias.source') }}</dt>
                        <dd>{{ alias.source }}</dd>

                        <dt>{{ trans('models.alias.destination') }}</dt>
                        <dd>{{ alias.destination }}</dd>

                        <dt>{{ trans('models.common.active') }}</dt>
                        <dd>{{ display.boolean_field(alias.active) }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
