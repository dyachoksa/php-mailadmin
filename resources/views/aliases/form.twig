<div class="box-body">
    {{ form_hidden('active', 0) }}

    <div class="form-group {% if errors.has('domain_id') %} has-error{% endif %}">
        {{ form_label('domain_id', 'Domain', {'class': 'col-md-3 control-label'}) }}
        <div class="col-md-9">
            {{ form_select('domain_id', domains, null, {'placeholder': 'Select domain...', 'class': 'form-control'}) }}
            {% if errors.has('domain_id') %}
                <span class="help-block">{{ errors.first('domain_id') }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group {% if errors.has('source') %} has-error{% endif %}">
        {{ form_label('source', 'Source address', {'class': 'col-md-3 control-label'}) }}
        <div class="col-md-9">
            {{ form_text('source', null, {'class': 'form-control'}) }}
            {% if errors.has('source') %}
                <span class="help-block">{{ errors.first('source') }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group {% if errors.has('destination') %} has-error{% endif %}">
        {{ form_label('destination', 'Destination', {'class': 'col-md-3 control-label'}) }}
        <div class="col-md-9">
            {{ form_text('destination', null, {'class': 'form-control'}) }}
            {% if errors.has('destination') %}
                <span class="help-block">{{ errors.first('destination') }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <div class="checkbox">
                <label>
                    {{ form_checkbox('active') }} {{ trans('models.common.active') }}
                </label>
            </div>
        </div>
    </div>
</div>

<div class="box-footer">
    <a href="{{ route('aliases.index') }}" class="btn btn-default">{{ trans('labels.actions.cancel') }}</a>
    <button type="submit" class="btn btn-primary pull-right">{{ trans('labels.actions.save') }}</button>
</div>
