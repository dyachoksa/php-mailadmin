<div class="box-body">
    {{ form_hidden('active', 0) }}

    <div class="form-group {% if errors.has('fqdn') %} has-error{% endif %}">
        {{ form_label('fqdn', 'Domain', {'class': 'col-md-2 control-label'}) }}
        <div class="col-md-10">
            {{ form_text('fqdn', null, {'class': 'form-control'}) }}
            {% if errors.has('fqdn') %}
                <span class="help-block">{{ errors.first('fqdn') }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <label>
                    {{ form_checkbox('active', '1', true) }} {{ trans('models.common.active') }}
                </label>
            </div>
        </div>
    </div>
</div>

<div class="box-footer">
    <a href="{{ route('domains.index') }}" class="btn btn-default">{{ trans('labels.actions.cancel') }}</a>
    <button type="submit" class="btn btn-primary pull-right">{{ trans('labels.actions.save') }}</button>
</div>
