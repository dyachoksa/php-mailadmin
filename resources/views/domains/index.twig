{% extends 'base' %}
{% import 'macros.display' as display %}

{% block page_title %}{{ trans('pages.domains.title') }}{% endblock %}

{% block title %}{{ trans('pages.domains.title') }}{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <div class="box-tools">
                <a href="{{ route('domains.create') }}" class="btn btn-success btn-sm"
                   title="{{ trans('pages.domains.create_link_title') }}">
                    {{ trans('labels.actions.create') }}
                </a>
            </div>
        </div>

        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ trans('models.domain.fqdn') }}</th>
                        <th>{{ trans('models.common.active') }}</th>
                        <th>{{ trans('models.common.created_at') }}</th>
                        <th>{{ trans('models.common.updated_at') }}</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>

                <tbody>
                    {% for domain in domains %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ domain.fqdn }}</td>
                            <td>
                                {{ display.boolean_field(domain.active) }}
                            </td>
                            <td>{{ domain.created_at }}</td>
                            <td>{{ domain.updated_at }}</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ route('domains.show', domain.id) }}" class="btn btn-default">
                                        {{ trans('labels.actions.detail') }}
                                    </a>
                                    <a href="{{ route('domains.edit', domain.id) }}" class="btn btn-default">
                                        {{ trans('labels.actions.edit') }}
                                    </a>
                                    <a href="{{ route('domains.destroy', domain.id) }}" class="btn btn-danger"
                                       data-method="DELETE" data-token="{{ csrf_token() }}"
                                       data-confirm="{{ trans('messages.common.delete_confirm') }}">
                                        {{ trans('labels.actions.delete') }}
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="box-footer clearfix">
            {{ domains.render() | raw }}
        </div>
    </div>
{% endblock %}
