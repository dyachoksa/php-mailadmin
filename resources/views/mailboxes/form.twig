<div class="box-body">
    {{ form_hidden('active', 0) }}

    {% set domain_id_label = trans('models.common.domain_id') %}
    <div class="form-group {% if errors.has('domain_id') %} has-error{% endif %}">
        {{ form_label('domain_id', domain_id_label, {'class': 'col-md-3 control-label'}) }}
        <div class="col-md-9">
            {{ form_select('domain_id', domains, null, {'placeholder': 'Select domain...', 'class': 'form-control'}) }}
            {% if errors.has('domain_id') %}
                <span class="help-block">{{ errors.first('domain_id') }}</span>
            {% endif %}
        </div>
    </div>

    {% set email_label = trans('models.mailbox.email') %}
    <div class="form-group {% if errors.has('email') %} has-error{% endif %}">
        {{ form_label('email', email_label, {'class': 'col-md-3 control-label'}) }}
        <div class="col-md-9">
            {{ form_text('email', null, {'class': 'form-control', 'autocomplete': 'off'}) }}
            {% if errors.has('email') %}
                <span class="help-block">{{ errors.first('email') }}</span>
            {% endif %}
        </div>
    </div>

    {% set password_label = trans('models.mailbox.password') %}
    <div class="form-group {% if errors.has('password') %} has-error{% endif %}">
        {{ form_label('password', password_label, {'class': 'col-md-3 control-label'}) }}
        <div class="col-md-9">
            {{ form_password('password', {'class': 'form-control', 'autocomplete': 'off'}) }}
            {% if errors.has('password') %}
                <span class="help-block">{{ errors.first('password') }}</span>
            {% endif %}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <div class="checkbox">
                <label>
                    {{ form_checkbox('active') }} {{ trans('models.common.active') }}
                </label>
            </div>
        </div>
    </div>
</div>

<div class="box-footer">
    <a href="{{ route('mailboxes.index') }}" class="btn btn-default">{{ trans('labels.actions.cancel') }}</a>
    <button type="submit" class="btn btn-primary pull-right">{{ trans('labels.actions.save') }}</button>
</div>
