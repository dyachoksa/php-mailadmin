{% extends "layout" %}

{% from "_forms" import action_buttons %}

{% block title %}Edit mailbox{% endblock %}

{% block content %}
  <div class="page-header">
    <h1>Edit <em>{{ mailbox.email }}</em></h1>
  </div>

  {{ form_model(mailbox, {'route': ['mailboxes.update', mailbox.id], 'method': 'put', 'class': 'form-horizontal', 'role': 'form'}) }}

    {% include "mailboxes/_form" %}

    {{ action_buttons(route('mailboxes.index'), 'Save') }}

  {{ form_close() }}
{% endblock %}
