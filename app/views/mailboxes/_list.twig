{% import "_helpers" as helpers %}

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Domain</th>
      <th>Active?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {% for mailbox in mailboxes %}
      <tr>
        <td>{{ mailbox.email }}</td>
        <td>{{ mailbox.domain.fqdn }}</td>
        <td>{{ helpers.boolean_marker(mailbox.active) }}</td>
        <td>
          <div class="btn-group btn-group-sm">
            <a href="{{ route('mailboxes.edit', mailbox.id) }}" class="btn btn-default">Edit</a>
            <a href="{{ route('mailboxes.delete', mailbox.id) }}" class="btn btn-danger">Delete</a>
          </div>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4">No mailboxes found. <a href="{{ route('mailboxes.create') }}">Create</a> a new one.</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
