{% extends "layout" %}

{% import "_helpers" as helpers %}

{% block title %}View domain mailboxes{% endblock %}

{% block content %}
  <div class="page-header row">
    <h1 class="col-md-10"> View <em>{{ domain.fqdn }}</em> mailboxes</h1>
    <div class="col-md-2 text-right">
      <div class="btn-group margin-top-20">
        <a href="{{ route('domains.edit', domain.id) }}" class="btn btn-default" title="Edit domain">Edit</a>
      </div>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>Active?</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for mailbox in mailboxes %}
        <tr>
          <td>{{ loop.index }}</td>
          <td>{{ mailbox.email }}</td>
          <td>{{ helpers.boolean_marker(mailbox.active) }}</td>
          <td>
            <div class="btn-group btn-group-sm">
              <a href="{{ route('mailboxes.edit', mailbox.id) }}" class="btn btn-default">Edit</a>
              <a href="{{ route('mailboxes.delete', mailbox.id) }}" class="btn btn-danger">Delete</a>
            </div>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4">No mailboxes found.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {{ mailboxes.links | raw }}
{% endblock %}
