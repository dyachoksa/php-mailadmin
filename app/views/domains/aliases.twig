{% extends "layout" %}

{% import "_helpers" as helpers %}

{% block title %}View domain mailboxes{% endblock %}

{% block content %}
  <div class="page-header row">
    <h1 class="col-md-10"> View <em>{{ domain.fqdn }}</em> aliases</h1>
    <div class="col-md-2 text-right">
      <div class="btn-group margin-top-20">
        <a href="{{ route('domains.edit', domain.id) }}" class="btn btn-default" title="Edit domain">Edit</a>
      </div>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Source</th>
        <th>Destination</th>
        <th>Active?</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for alias in aliases %}
        <tr>
          <td>{{ loop.index }}</td>
          <td>{{ alias.source }}</td>
          <td>{{ alias.destination }}</td>
          <td>{{ helpers.boolean_marker(alias.active) }}</td>
          <td>
            <div class="btn-group btn-group-sm">
              <a href="{{ route('aliases.edit', alias.id) }}" class="btn btn-default">Edit</a>
              <a href="{{ route('aliases.delete', alias.id) }}" class="btn btn-danger">Delete</a>
            </div>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">No aliases found.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {{ aliases.links | raw }}
{% endblock %}
